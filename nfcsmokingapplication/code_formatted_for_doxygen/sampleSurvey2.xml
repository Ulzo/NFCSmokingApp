<!--Notes:
	For NextQues or DefaultNextQues: 0 specifies that current question is end of survey
	Radio Button conditions: numbers ONLY (1+) separate by "|"
	Check Boxes conditions: numbers 1-5 separated by "&"
	Multiple conditions allowed: just add another <Condition> tag under
	Slider Conditions: - [less than] (number) OR + [greater than] (number) OR > (num) & < (num) 
	QuesType: button, slider, check
-->

<Survey>
<Question>
	<QuesID>1</QuesID>
	<QuestionString>How long ago did you finish smoking?</QuestionString>
	<QuesType>button</QuesType>
	<NumOfChoices> 7
		<Choices>
			<choice>1 minute</choice>
			<choice>2-5 minutes</choice>
			<choice>6-15 minutes</choice>
			<choice>16-30 minutes</choice>
			<choice>31-45 minutes</choice>
			<choice>46-60 minutes</choice>
			<choice>60+ minutes</choice>
		</Choices>
	</NumOfChoices>
	<SliderScale>
		<Start>
			<StartNum> </StartNum>
			<StartLabel> </StartLabel>
		</Start>
		<Middle>
			<MiddleLabel> </MiddleLabel>
		</Middle>
		<End>
			<EndNum> </EndNum>
			<EndLabel> </EndLabel>
		</End>
		<NumOfDivisions> </NumOfDivisions>
	</SliderScale>
	<RadioButtons>
		<Condition>
			<NextQuestion></NextQuestion>
		</Condition>
	</RadioButtons>
	<CheckBoxes>
		<Condition>
			<NextQuestion> </NextQuestion>
		</Condition>
	</CheckBoxes>
	<SliderScale>
		<Condition>
			<NextQuestion> </NextQuestion>
		</Condition>
	</SliderScale>
	<DefaultNext>2</DefaultNext>
</Question>

<Question>
	<QuesID>2a</QuesID>
	<QuestionString>Right now: I feel Happy</QuestionString>
	<QuesType>slider</QuesType>
	<NumOfChoices>
		<Choices>
		</Choices>
	</NumOfChoices>
	<SliderScale>
		<Start>
			<StartNum>1</StartNum>
			<StartLabel>Not At All</StartLabel>
		</Start>
		<Middle>
			<MiddleLabel>Somewhat</MiddleLabel>
		</Middle>
		<End>
			<EndNum>10</EndNum>
			<EndLabel>Very Much</EndLabel>
		</End>
		<NumOfDivisions>10</NumOfDivisions>
	</SliderScale>
	<RadioButtons>
		<Condition>
			<NextQuestion></NextQuestion>
		</Condition>
	</RadioButtons>
	<CheckBoxes>
		<Condition>
			<NextQuestion> </NextQuestion>
		</Condition>
	</CheckBoxes>
	<SliderScale>
		<Condition>
			<NextQuestion> </NextQuestion>
		</Condition>
	</SliderScale>
	<DefaultNext>2b</DefaultNext>
</Question>

</Survey>